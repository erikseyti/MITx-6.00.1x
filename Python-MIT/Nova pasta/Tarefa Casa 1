s = "sucodemaca"
numeroVogais = 0

for caracter in s:
    if caracter == 'a' or caracter == 'e' or caracter == 'o' \
    or caracter == 'i' or caracter == 'u':
        numeroVogais = numeroVogais + 1
print(numeroVogais)
        
